{
    "type": "Microsoft.VirtualMachineImages",
    "apiVersion": "2019-05-01-preview",
    "location": "<region1>",
    "dependsOn": [],
    "properties": {
        "source": {
            "type": "PlatformImage",
                "publisher": "MicrosoftWindowsServer",
                "offer": "WindowsServer",
                "sku": "2019-Datacenter",
                "version": "2019.0.20190214"
            
        },
        "customize": [
            {
                "type": "PowerShell",
                "name": "settingUpMgmtAgtPath",
                "inline": [
                    "mkdir c:\\buildArtifacts"
                ]
            },
            {
                "type": "File",
                "name": "downloadBuildArtifacts",
                "sourceUri": "https://cloudteststorageazvm.blob.core.windows.net/files/NDP472-KB4054530-x86-x64-AllOS-ENU.exe?sp=r&st=2019-05-21T17:30:09Z&se=2019-05-22T01:30:09Z&spr=https&sv=2018-03-28&sig=Proc5tQZty0uRRKnXXEp4R0G%2FiRcjI3ow1exuRR2yn0%3D&sr=b",
                "destination":"c:\\buildArtifacts\\NDP472-KB4054530-x86-x64-AllOS-ENU.exe"
            },
            {
                "type": "File",
                "name": "downloadBuildArtifacts2",
                "sourceUri": "https://cloudteststorageazvm.blob.core.windows.net/files/install-dotnet.cmd?sp=r&st=2019-05-21T17:31:12Z&se=2019-05-22T01:31:12Z&spr=https&sv=2018-03-28&sig=ckFT6UDFMmioqsGNbobCE3imiVjwD1bQSJqArosw2F8%3D&sr=b",
                "destination":"c:\\buildArtifacts\\install-dotnet.cmd"
            },
            {
                "type": "File",
                "name": "downloadBuildArtifacts3",
                "sourceUri": "https://cloudteststorageazvm.blob.core.windows.net/files/SetupNet472.ps1?sp=r&st=2019-05-21T17:31:39Z&se=2019-05-22T01:31:39Z&spr=https&sv=2018-03-28&sig=6Y4FXyQvSmV6JKwE5N4bJmcINrRJNaDHVYgXx3H98lM%3D&sr=b",
                "destination":"c:\\buildArtifacts\\SetupNet472.ps1"
            },
            {
                "type": "WindowsRestart",                
                "restartTimeout": "5m"
            },
            {
                "type": "PowerShell",
                "name": "installNet472",
                "inline": [
                    "cd c:\\buildArtifacts",
                    "SetupNet472.ps1"
                ]
            }
        ],
        "distribute": 
        [
            {   
                "type": "SharedImage",
                "galleryImageId": "/subscriptions/<subscriptionID>/resourceGroups/<rgName>/providers/Microsoft.Compute/galleries/<sharedImageGalName>/images/<imageDefName>",               
                "runOutputName": "<runOutputName>",
                "artifactTags": {
                    "source": "azureVmImageBuilder",
                    "baseosimg": "windows2019"
                },
                "replicationRegions": [
                  "<region1>",
                  "<region2>"
                ]
            }
        ]
    }
}
