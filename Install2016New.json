{
    "type": "Microsoft.VirtualMachineImages",
    "apiVersion": "2019-05-01-preview",
    "location": "<region1>",
    "dependsOn": [],
    "properties": {
        "buildTimeoutInMinutes": 120,
        "source": {
            "type": "PlatformImage",
                "publisher": "MicrosoftWindowsServer",
                "offer": "WindowsServer",
                "sku": "2016-Datacenter",
                "version": "2016.127.20190603"
        },
        "customize": [
            {
                "type": "PowerShell",
                "name": "DownloadFiles",
                "scriptUri": "https://azurecomputeimgs00.blob.core.windows.net/azurevmimagebuilder/DownloadFiles.ps1?sp=r&st=2019-10-23T00:36:51Z&se=2019-12-31T09:36:51Z&spr=https&sv=2019-02-02&sr=b&sig=eVlp8oKVOsbK8Dc2IbJuxMvzh4lGPoQ5sY2%2FH5PV90w%3D"
            },
            {
                "type": "PowerShell",
                "name": "RunSetup",
                "scriptUri": "https://azurecomputeimgs00.blob.core.windows.net/azurevmimagebuilder/setup.ps1?sp=r&st=2019-10-23T00:37:33Z&se=2019-12-31T09:37:33Z&spr=https&sv=2019-02-02&sr=b&sig=If7NuyqiK6n9TDTowA3rlhK%2BalvJU4y3pvs6FThUnmM%3D"
            },
           {
             "type": "WindowsRestart",
             "restartCheckCommand": "echo Azure-Image-Builder-Restarted-the-VM  > c:\\buildArtifacts\\azureImageBuilderRestart.txt",
            "restartTimeout": "5m"
          }
        ],
        "distribute":
        [
            {
                "type": "SharedImage",
                "galleryImageId": "/subscriptions/<subscriptionID>/resourceGroups/<rgName>/providers/Microsoft.Compute/galleries/<sharedImageGalName>/images/<imageDefName>",
                "runOutputName": "<runOutputName>",
                "artifactTags": {
                    "source": "azureVmImageBuilder",
                    "baseosimg": "windows2016"
                },
                "replicationRegions": [
                  "<region1>"
                ]
            }
        ]
    }
}
