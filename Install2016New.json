{
    "type": "Microsoft.VirtualMachineImages",
    "apiVersion": "2019-05-01-preview",
    "location": "<region1>",
    "dependsOn": [],
    "properties": {
        "buildTimeoutInMinutes": 120,
        "source": {
            "type": "PlatformImage",
                "publisher": "MicrosoftWindowsServer",
                "offer": "WindowsServer",
                "sku": "2016-Datacenter",
                "version": "2016.127.20190603"
        },
        "customize": [
            {
                "type": "PowerShell",
                "name": "DownloadFiles",
                "scriptUri": "https:///azurevmimagebuilder/DownloadFiles.ps1?sp=r&st=2019-10-18T03:13:39Z&se=2019-12-31T12:13:39Z&spr=https&sv=2019-02-02&sr=b&sig=o%2BOQzB69jo2frTxf2NOZ3dVPuh%2Fy91RpgzLK1kHLJv0%3D"
            },
            {
                "type": "PowerShell",
                "name": "RunSetup",
                "scriptUri": "https:///azurevmimagebuilder/setup.ps1?sp=r&st=2019-10-18T17:07:45Z&se=2020-01-01T02:07:45Z&spr=https&sv=2019-02-02&sr=b&sig=v13cSsFf5mkjoWL%2FMoVXAuPbiRXmcaXSVvifHpZYPKw%3D"
            },
           {
             "type": "WindowsRestart",
             "restartCheckCommand": "echo Azure-Image-Builder-Restarted-the-VM  > c:\\buildArtifacts\\azureImageBuilderRestart.txt",
            "restartTimeout": "5m"
          }
        ],
        "distribute":
        [
            {
                "type": "SharedImage",
                "galleryImageId": "/subscriptions/<subscriptionID>/resourceGroups/<rgName>/providers/Microsoft.Compute/galleries/<sharedImageGalName>/images/<imageDefName>",
                "runOutputName": "<runOutputName>",
                "artifactTags": {
                    "source": "azureVmImageBuilder",
                    "baseosimg": "windows2016"
                },
                "replicationRegions": [
                  "<region1>"
                ]
            }
        ]
    }
}
