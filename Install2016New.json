{
    "type": "Microsoft.VirtualMachineImages",
    "apiVersion": "2019-05-01-preview",
    "location": "<region1>",
    "dependsOn": [],
    "properties": {
        "buildTimeoutInMinutes": 120,
        "source": {
            "type": "PlatformImage",
                "publisher": "MicrosoftWindowsServer",
                "offer": "WindowsServer",
                "sku": "2016-Datacenter",
                "version": "2016.127.20190603"
        },
        "customize": [
            {
                "type": "PowerShell",
                "name": "DownloadFiles",
                "scriptUri": "https://provisionscriptsstacct.blob.core.windows.net/ver1/DownloadFiles.ps1?sp=r&st=2019-12-11T19:52:59Z&se=2020-01-01T03:52:59Z&spr=https&sv=2019-02-02&sr=b&sig=mjn30uf9oiWFSpAabSe07Y5LOcrTEkQmZYKB9A5LNh8%3D"
            },
            {
                "type": "PowerShell",
                "name": "RunSetup",
                "scriptUri": "https://provisionscriptsstacct.blob.core.windows.net/ver1/setup.ps1?sp=r&st=2019-12-11T19:51:13Z&se=2020-01-01T03:51:13Z&spr=https&sv=2019-02-02&sr=b&sig=YuNJWTYU4nyUQPquxIxss92DtYRpLs%2B75yuTz2eHBmU%3D"
            },
           {
             "type": "WindowsRestart",
             "restartCheckCommand": "echo Azure-Image-Builder-Restarted-the-VM  > c:\\buildArtifacts\\azureImageBuilderRestart.txt",
            "restartTimeout": "5m"
          }
        ],
        "distribute":
        [
            {
                "type": "SharedImage",
                "galleryImageId": "/subscriptions/<subscriptionID>/resourceGroups/<rgName>/providers/Microsoft.Compute/galleries/<sharedImageGalName>/images/<imageDefName>",
                "runOutputName": "<runOutputName>",
                "artifactTags": {
                    "source": "azureVmImageBuilder",
                    "baseosimg": "windows2016"
                },
                "replicationRegions": [
                  "<region1>"
                ]
            }
        ]
    }
}
